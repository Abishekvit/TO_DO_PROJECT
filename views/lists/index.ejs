<% layout('layouts/boilerplate') %>

<div class="container my-5">
<div class="row text-center mb-5">
<h1 class="display-5 fw-bold">All My Lists</h1>
</div>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
<% if (allLists.length > 0) { %>
<% for(let list of allLists) { %>
<div class="col">
<a href="/lists/<%= list._id %>" class="list-card-link text-decoration-none">
<div class="card h-100 shadow-sm border-0 rounded-4 list-card-hover">
<div class="card-body d-flex flex-column justify-content-center align-items-center">
<h5 class="card-title fw-bold text-dark"><%= list.name %></h5>
</div>
</div>
</a>
</div>
<% } %>
<% } else { %>
<div class="col-12 text-center">
<p class="text-muted fst-italic">You don't have any lists yet. Create one to get started!</p>
</div>
<% } %>
</div>
<div class="text-center mt-5">
<a href="/lists/new" class="btn btn-primary btn-lg fw-bold rounded-pill shadow">Create New List</a>
</div>
</div>